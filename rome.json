{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "organizeImports": {
      "enabled": false
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentSize": 2,
      "lineWidth": 120,
      "ignore": []
    },
    "files": {
      "ignore": [
        "**/node_modules/**", "**/build/**", "**/dist/**", "**/coverage/**", "**/vendor/**", "**/public/**", "**/tmp/**",
        "**/cache/**", "**/logs/**", "**/docs/**", "**/e", "**/tunedglobal/**", "**/coingecko/**"
      ]
    }
  }
  